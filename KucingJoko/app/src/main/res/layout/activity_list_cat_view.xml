<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true"
    tools:context=".ListCatFile.ListCatView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_logo_login"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/txt_cat_name"
                android:layout_toRightOf="@+id/image"
                android:text="Nama Kucing"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/txt_cat_gender"
                android:layout_below="@+id/txt_cat_name"
                android:layout_toRightOf="@+id/image"
                android:text="Cat Gender"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/txt_cat_type"
                android:layout_below="@+id/txt_cat_gender"
                android:layout_toRightOf="@+id/image"
                android:text="Cat Type"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

            android:id="@+id/txt_cat_color"
            android:layout_below="@+id/txt_cat_type"
            android:layout_toRightOf="@+id/image"
            android:text="Cat Color"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/txt_cat_food"
                android:layout_below="@+id/txt_cat_color"
                android:layout_toRightOf="@+id/image"
                android:text="Cat Food"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_give_food"
                android:layout_below="@+id/txt_cat_color"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Give a food"
                android:background="@drawable/bg_ui"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>