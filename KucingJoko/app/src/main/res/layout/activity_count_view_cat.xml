<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    tools:context=".CountCat.CountViewCat">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_count1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Your Cat"
            android:textSize="15sp"
           android:textColor="@color/design_default_color_secondary"/>
        <TextView
            android:id="@+id/txt_count_cat_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Your Cat"
            android:textSize="15sp"
            android:layout_marginLeft="23dp"
            android:textColor="#0E0A0A"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_count2"
            android:layout_below="@+id/linear_count1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_count2"
            android:layout_below="@+id/txt_count_cat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender Your Cat"
            android:textSize="15sp"
            android:textColor="@color/design_default_color_secondary"/>
            <TextView
                android:id="@+id/txt_count_car_gender"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count Of Your Cat"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                android:textColor="#0E0A0A"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_count3"
            android:layout_below="@+id/linear_count2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_count1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count Of Your Cat"
            android:textSize="15sp"
            android:textColor="@color/design_default_color_secondary"/>
            <TextView
                android:id="@+id/txt_count_catt"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count Of Your Cat"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#0E0A0A"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>